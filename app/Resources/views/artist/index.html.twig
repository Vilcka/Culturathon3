{% extends 'base.html.twig' %}

{% block body %}
    <h1>Artists list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Placeofbirth</th>
                <th>Birthdate</th>
                <th>Deathdate</th>
                <th>Biography</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td><a href="{{ path('artist_show', { 'id': artist.id }) }}">{{ artist.id }}</a></td>
                <td>{{ artist.firstName }}</td>
                <td>{{ artist.lastName }}</td>
                <td>{{ artist.placeOfBirth }}</td>
                <td>{% if artist.birthDate %}{{ artist.birthDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ artist.deathDate }}</td>
                <td>{{ artist.biography }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('artist_show', { 'id': artist.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('artist_edit', { 'id': artist.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('artist_new') }}">Create a new artist</a>
        </li>
    </ul>
{% endblock %}
