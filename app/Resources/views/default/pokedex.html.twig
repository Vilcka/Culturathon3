{% extends 'base.html.twig' %}

{% block body %}





    <div class="content">
        <div class="grid">
            {% for current, artworks in artworksByCurrent %}
            {% for artwork in artworks %}
            <a class="grid__item" href="#{% for user in artwork.users if user == app.user %}{{ artwork.artist.lastName }}{% endfor %}">
                <div class="box">
                    <div class="box__shadow"></div>
                    <img class="box__img{% for user in artwork.users if user == app.user %}on{% endfor %}" src="{{ vich_uploader_asset(artwork, 'imageFile') }} " alt="Some image"/>
                    <h3 class="box__title"><span class="box__title-inner" data-hover="{{ artwork.museum.name }}">{{ artwork.museum.name }}</span></h3>
                    <h4 class="box__text"><span class="box__text-inner">{{ artwork.artist.lastName }}</span></h4>
                    <p class="box__content">{{ artwork.title }}</p>
                </div>
            </a>
            {% endfor %}
            {% endfor %}
        </div>




    <div class="overlay">
        <div class="overlay__reveal"></div>
        {% for current, artworks in artworksByCurrent %}
        {% for artwork in artworks %}
        {% for user in artwork.users if user == app.user %}

        <div class="overlay__item" id="{{ artwork.artist.lastName }}">
            <div class="box">
                <div class="box__shadow"></div>
                <img class="box__img box__img--original" src="{{ vich_uploader_asset(artwork, 'imageFile') }} " alt="Some image"/>
                <h3 class="box__title"><span class="box__title-inner">{{ artwork.museum.name }}</span></h3>
                <h4 class="box__text"><span class="box__text-inner">{{ artwork.artist.firstName }} {{ artwork.artist.lastName }}</span></h4>

            </div>
            <p class="overlay__content">{{ artwork.description }}</p>
        </div>
        {% endfor %}
        {% endfor %}
        {% endfor %}

        <button class="overlay__close"><img src="img/error.png"></button>

    </div>












{% endblock %}